<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:fillViewport="true" >
        
        <RelativeLayout
            android:id="@+id/signupScrollView"
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false" >

		    <EditText
		        android:id="@+id/firstNameText"
		        android:layout_width="220dp"
		        android:layout_height="40dp"
		        android:layout_below="@+id/avatarImageView"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="15dp"
		        android:ems="10"
		        android:hint="First Name"
		        android:text="DaRong" />
		    
		    <EditText
		        android:id="@+id/lastNameText"
		        android:layout_width="220dp"
		        android:layout_height="40dp"
		        android:layout_alignLeft="@+id/firstNameText"
		        android:layout_below="@+id/firstNameText"
		        android:ems="10"
		        android:hint="Last Name"
		        android:text="Cai" />
		
		    <EditText
		        android:id="@+id/birthdayText"
		        android:layout_width="220dp"
		        android:layout_height="40dp"
		        android:layout_alignLeft="@+id/lastNameText"
		        android:layout_below="@+id/lastNameText"
		        android:ems="10"
		        android:hint="Date of Birth"
		        android:text="08/01/1988" />
		
		    <EditText
		        android:id="@+id/zipCodeText"
		        android:layout_width="220dp"
		        android:layout_height="40dp"
		        android:layout_alignLeft="@+id/birthdayText"
		        android:layout_below="@+id/birthdayText"
		        android:ems="10"
		        android:hint="Zip Code"
		        android:text="118000" />
		
		    <EditText
		        android:id="@+id/emailText"
		        android:layout_width="220dp"
		        android:layout_height="40dp"
		        android:layout_alignLeft="@+id/zipCodeText"
		        android:layout_below="@+id/zipCodeText"
		        android:ems="10"
		        android:hint="Email Address"
		        android:text="yaung7781@gmail.com" />
		
		    <EditText
		        android:id="@+id/passwordText"
		        android:layout_width="220dp"
		        android:layout_height="40dp"
		        android:layout_alignLeft="@+id/emailText"
		        android:layout_below="@+id/emailText"
		        android:ems="10"
		        android:hint="Password"
		        android:inputType="textPassword"
		        android:text="123456789" />
		
		    <EditText
		        android:id="@+id/confirmPasswordText"
		        android:layout_width="220dp"
		        android:layout_height="40dp"
		        android:layout_alignLeft="@+id/passwordText"
		        android:layout_below="@+id/passwordText"
		        android:ems="10"
		        android:hint="Confirm Password"
		        android:inputType="textPassword"
		        android:text="123456789" />
		
		    <Button
		        android:id="@+id/id_home_loginBtn"
		        android:layout_width="233dp"
		        android:layout_height="37dp"
		        android:layout_below="@+id/confirmPasswordText"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="14dp"
		        android:background="@drawable/input2"
		        android:text="Submit"
		        android:textColor="#ffffff" />

		    <ImageView
		        android:id="@+id/avatarImageView"
		        android:layout_width="90dp"
		        android:layout_height="90dp"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="58dp"
		        android:clickable="true"
		        android:src="@drawable/avatar_bk" />
    
        </RelativeLayout>
        
    </ScrollView>
    
    <RelativeLayout
        android:id="@+id/id_main_navBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false" >

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/header_bk" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/id_favoriteBtn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/tap_inactive_favorite" />

        <ImageView
            android:id="@+id/id_eventBtn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:src="@drawable/tap_inactive_event" />

        <ImageView
            android:id="@+id/id_accountBtn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="160dp"
            android:src="@drawable/tap_inactive_account" />

        <ImageView
            android:id="@+id/id_recommendBtn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="240dp"
            android:src="@drawable/tap_inactive_recommend" />

    </RelativeLayout>

</RelativeLayout>